@using Microsoft.AspNetCore.Mvc.ModelBinding
@model MuscleGain.Models.Proteins.AddProtein;

@{
	ViewData["Title"] = "Add Protein";
}

<div class="container">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<h2 class="heading-margin text-center">Add Protein</h2>
		<form method="post">
			<div class="mb-3">
				<label asp-for="Name" class="form-label"></label>
				<input asp-for="Name" class="form-control" placeholder="Whey Protein, Clear Protein, etc...">
				<span asp-validation-for="Name" class="small text-danger"></span>

			</div>
			<div class="mb-3">
				<label asp-for="Flavour" class="form-label"></label>
				<input asp-for="Flavour" class="form-control" placeholder="Chocolate, biscuit, etc...">
				<span asp-validation-for="Flavour" class="small text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Grams" class="form-label"></label>
				<input asp-for="Grams" class="form-control" placeholder="Please put your protein's weight.">
				<span asp-validation-for="Grams" class="small text-danger"></span>
			</div>
			<div class="mb-3">
					<label asp-for="Price" class="form-label"></label>
				<div class="input-group">
					<div class="input-group-prepend">
						<span class="input-group-text">$</span>
					</div>
					<input asp-for="Price" asp-format="{0:#,###.00}" aria-label="Amount (to the nearest dollar)" class="form-control" placeholder="The price must be in Dollars."/>
					<span asp-validation-for="Price" class="small text-danger"></span>
				</div>
			</div>
			<div class="mb-3">
				<label asp-for="Description" class="form-label"></label>
				<textarea asp-for="Description" rows="4" class="form-control" placeholder="Please write at least 10 words about your product."></textarea>
				<span asp-validation-for="Description" class="small text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="ImageUrl" class="form-label"></label>
				<input asp-for="ImageUrl" class="form-control" placeholder="Put your URL here...">
				<span asp-validation-for="ImageUrl" class="small text-danger"></span>
			</div>
			<label asp-for="CategoryId"></label>
			<select asp-for="CategoryId" class="form-select">
				@foreach (var category in Model.Categories)
				{
					<option value="@category.Id">@category.Name</option>
				}
			</select>
			<div class="col-6">
				<button type="submit" class="btn btn-primary mt-2 mb-2">Save</button>
			</div>
		</form>
	</div>
</div>