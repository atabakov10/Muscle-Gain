@model IndexViewModel

@{
	ViewData["Title"] = "Welcome";
}

@{
	var proteins = Model.Proteins;
	var firstProtein = proteins.Any() ? proteins[0] : null;

	var secondProtein = proteins.Count > 1 ? proteins[1] : null;
	var thirdProtein = proteins.Count > 2 ? proteins[2] : null;
}

<div class="jumbotron">
	<div class="container">
		<h1>Welcome to Muscle Gain!</h1>
		<h2>World's No.1 Online Sports Nutrition Brand</h2>
	</div>
</div>
<hr />

@if (!proteins.Any())
{
	<div class="jumbotron">
		<p class="lead">There aren't any proteinService/creatines available, so why don't you just add one?</p>
		<hr class="my-4">
		<p class="lead">
			<a asp-controller="Proteins" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Protein</a>
		</p>
	</div>
}

<div class="mt-5"></div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
	<ol class="carousel-indicators">
		<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
		<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
		<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
	</ol>
	<div class="carousel-inner">
		@if (firstProtein != null)
		{
			<div class="carousel-item active">
				<img class="d-block w-50 center" src="@firstProtein.ImageUrl" alt="@firstProtein.Name - @firstProtein.Grams">
				<div class="carousel-caption d-none d-sm-block">
					<h5><a class="btn btn-dark" asp-controller="Proteins" asp-action="Details" asp-route-id="@firstProtein.Id">@firstProtein.Name (@firstProtein.Flavour) - @firstProtein.Grams</a></h5>
				</div>
			</div>
		}
		@if (secondProtein != null)
		{
			<div class="carousel-item">
				<img class="d-block w-50 center" src="@secondProtein.ImageUrl" alt="@secondProtein.Name - @secondProtein.Grams">
				<div class="carousel-caption d-none d-sm-block">
					<h5><a class="btn btn-dark" asp-controller="Proteins" asp-action="Details" asp-route-id="@secondProtein.Id">@secondProtein.Name (@secondProtein.Flavour) - @secondProtein.Grams</a></h5>
				</div>
			</div>
		}
		@if (thirdProtein != null)
		{
			<div class="carousel-item">
				<img class="d-block w-50 center" src="@thirdProtein.ImageUrl" alt="@thirdProtein.Name - @thirdProtein.Grams">
				<div class="carousel-caption d-none d-sm-block">
					<h5><a class="btn btn-dark" asp-controller="Proteins" asp-action="Details" asp-route-id="@thirdProtein.Id">@thirdProtein.Name (@thirdProtein.Flavour) - @thirdProtein.Grams</a></h5>
				</div>
			</div>
		}
	</div>
	<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>

<div class="mb-5"></div>
