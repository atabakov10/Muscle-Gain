@using MuscleGain.Core.Constants
<nav class="mt-3">
	<ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
		<!-- AddAsync icons to the links using the .nav-icon class
		with font-awesome or any other icon font library -->
		<li class="nav-item mb-2">
			<a href="#" class="nav-link active text-center">
				<p class="text-center">
					Proteins
					<i class="right fas fa-angle-left"></i>
				</p>
			</a>
			<ul class="nav nav-treeview">
				<li class="nav-item mb-2">
					<a asp-area="" asp-controller="Protein" asp-action="All" class="nav-link active">
						<i class="far fa-circle nav-icon"></i>
						<p class="text-center">
							Protein's Page
						</p>
					</a>
				</li>
				@if (User.IsInRole(RoleConstants.Seller))
				{
					<li class="nav-item mb-2">
						<a asp-area="" asp-controller="Protein" asp-action="Add" class="nav-link">
							<i class="fas fa-plus-circle"></i>
							<p class="text-center">
								Add Protein
							</p>
						</a>
					</li>
				}
			</ul>
		</li>
		<li class="nav-item mb-2">
			<a href="#" class="nav-link active text-center">
				<p class="text-center">
					Quotes
					<i class="right fas fa-angle-left"></i>
				</p>
			</a>
			<ul class="nav nav-treeview">
				<li class="nav-item mb-2">
					<a asp-area="" asp-controller="Quote" asp-action="Index" class="nav-link active">
						<i class="far fa-circle nav-icon"></i>
						<p class="text-center">
							Quote's Page
						</p>
					</a>
				</li>
			</ul>
		</li>
		@if (User?.IsInRole(RoleConstants.Administrator) ?? false)
		{
			<li class="align-bottom mb-2">
				<a asp-area="Admin" asp-controller="" asp-action="Index" class="nav-link active text-center">
					<p class="text-center">
						Management
					</p>
				</a>
			</li>
		}
		@if (!User.IsInRole(RoleConstants.Seller) && User.Identity.IsAuthenticated)
		{
			<li class="align-bottom center mb-2">
				<a asp-area="" asp-controller="ShoppingCart" asp-action="GetAllOrders" class="nav-link active text-center">
					<p class="text-center">
						Orders
					</p>
				</a>
			</li>
		}
		@if (User?.IsInRole(RoleConstants.Author) ?? false)
		{
			<li class="align-bottom center">
				<a asp-area="Author" asp-controller="Quote" asp-action="Index" class="nav-link active text-center">
					<p class="text-center">
						Author
					</p>
				</a>
			</li>
		}
	</ul>
</nav>

