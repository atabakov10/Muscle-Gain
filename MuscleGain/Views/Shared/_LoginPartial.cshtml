@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using MuscleGain.Core.Constants
@using MuscleGain.Infrastructure.Data.Models.Account
@inject SignInManager<ApplicationUser> SignInManager



<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{
		<li style="text-align: left"><a type="submit" class="btn btn-outline-light" asp-area="" asp-controller="Home" asp-action="Index">Home Page</a></li>


		<li style="text-align: left"><a type="submit" class="btn btn-outline-light" asp-area="" asp-controller="Account" asp-action="MyProfile">My Profile</a></li>



		<li class="dropdown-menu">
		<li><a type="submit" class="btn btn-outline-light" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>
		</li>
	}
	else
	{
		<li class="dropdown-menu">
		<li style="text-align: left"><a type="submit" class="btn btn-outline-light" asp-controller="Home" asp-action="Index">Home Page</a></li>
		<li><a type="submit" class="btn btn-outline-light " asp-controller="Account" asp-action="Register">Register</a></li>
		<li><a type="submit" class="btn btn-outline-light" asp-controller="Account" asp-action="Login">Login</a></li>
		</li>
	}
</ul>
