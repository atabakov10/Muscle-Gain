<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>@ViewData["Title"] - Muscle Gain</title>

	<!-- Google Font: Source Sans Pro -->
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
	<!-- Font Awesome Icons -->
	<link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css" />
	<!-- Theme style -->
	<link rel="stylesheet" href="~/css/adminlte.min.css" />
	<link href="~/plugins/toastr/toastr.min.css" rel="stylesheet" />
	<link href="~/plugins/toastr/toastr.css" rel="stylesheet" />

	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pace-js@latest/pace-theme-default.min.css">

	<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	@await RenderSectionAsync("Head", false)
</head>
<body class="hold-transition sidebar-mini">
	<div class="wrapper">

		<!-- Navbar -->
		<nav class="main-header navbar navbar-expand navbar-dark">
			<!-- Left navbar links -->
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
				</li>
			</ul>

			<!-- Right navbar links -->
			<ul class="navbar-nav ml-auto">
				<!--Home Page Link-->
				<!--Register/Login-->
				@if (User.Identity.IsAuthenticated)
				{
					<li style="text-align: left"><a type="submit" class="btn btn-outline-light" asp-area="" asp-controller="Home" asp-action="Index">Home Page</a></li>
					<li style="text-align: left"><a type="submit" class="btn btn-outline-light" asp-area="" asp-controller="Account" asp-action="MyProfile">My Profile</a></li>
				}
				<partial name="_LoginPartial" />
				<!-- Navbar Fullscreen -->
				<li class="nav-item">
					<a class="nav-link" data-widget="fullscreen" href="#" role="button">
						<i class="fas fa-expand-arrows-alt"></i>
					</a>
				</li>
			</ul>
		</nav>
		<!-- /.navbar -->
		<!-- Main Sidebar Container -->
		<aside class="main-sidebar sidebar-dark-primary elevation-4">
			<!-- Brand Logo -->
			<a asp-area="" asp-controller="Home" asp-action="Index" class="brand-link">
				<img src="~/img/188881.png" alt="MG Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
				<span class="brand-text font-weight-light"><strong>Muscle Gain</strong></span>
			</a>

			<!-- Sidebar -->
			<div class="sidebar">
				<!-- Sidebar user panel (optional) -->
				<div class="user-panel mt-2 pb-2 mb-2 d-flex">
					<div class="info">
						@if (User?.Identity?.IsAuthenticated ?? false)
						{
							@if (ViewBag.UserProfilePicture == String.Empty)
							{
								<img src="~/img/6a5b3185c490202f2b693763a1f98abf.jpg" alt="MG Logo" class="brand-image img-circle elevation-3 w-25" style="opacity: .8">
							}
							else
							{
								<img src=@ViewBag.UserProfilePicture alt="Profile picture" class="brand-image img-circle elevation-3 w-25" style="opacity: .8">
							}
							<a type="submit" class="btn btn-outline-secondary" asp-area="" asp-controller="Account" asp-action="MyProfile" title="Manage">
								<span class="brand-text font-weight-light"><strong>Hello, <strong>@ViewBag.UserFirstName</strong>!</strong></span>
							</a>
						}
						else
						{
							<a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-outline-secondary">Please Register/Login</a>
						}

					</div>
				</div>

				<!-- Sidebar Menu -->
				<partial name="_MainMenu" />

				<!-- /.sidebar-menu -->
			</div>
			<!-- /.sidebar -->
		</aside>

		<!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper">
			<!-- Main content -->
			<div class="content">
				<div class="container-fluid">
					@RenderBody()
				</div><!-- /.container-fluid -->
			</div>
			<!-- /.content -->
		</div>
		<!-- /.content-wrapper -->
		<!-- Main Footer -->
		<footer id="sticky-footer" class="flex-shrink-0 py-4 bg-dark text-white-50 main-footer">
			<div class="container text-center text-md-left">

				<!-- Grid row -->
				<div class="row">

					<!-- Grid column -->
					<div class="col-md-4 col-lg-3 mr-auto my-md-4 my-0 mt-4 mb-1">

						<!-- Content -->
						<h5 class="font-weight-bold text-uppercase mb-4">Thank you!</h5>
						<p>Thank you for visiting our website! It was pleasure to have you around here :-)</p>
						<p>
							You can share it with your friends, because more content and funcionality is coming soon!
							Have a great day! <i class="far fa-smile-beam"></i>

						</p>

					</div>
					<!-- Grid column -->

					<hr class="clearfix w-100 d-md-none">

					<hr class="clearfix w-100 d-md-none">

					<!-- Grid column -->
					<div class="col-md-4 col-lg-3 mx-auto my-md-4 my-0 mt-4 mb-1">

						<!-- Contact details -->
						<h5 class="font-weight-bold text-uppercase mb-4">Address</h5>

						<ul class="list-unstyled">
							<li>
								<p>
									<i class="fas fa-home mr-3"></i> Plovdiv, Trakiya, BG
								</p>
							</li>
							<li>
								<p>
									<i class="fas fa-envelope mr-3"></i> atabakov99@abv.bg
								</p>
							</li>
							<li>
								<p>
									<i class="fas fa-phone mr-3"></i> +359 8862 47 419
								</p>
							</li>
							<li>
								<p>
									<i class="fas fa-print mr-3"></i> + 01 234 567 89
								</p>
							</li>
						</ul>

					</div>
					<!-- Grid column -->

					<hr class="clearfix w-100 d-md-none">

					<!-- Grid column -->
					<div class="col-md-2 col-lg-2 justify-content-center mx-auto my-4">

						<!-- Social buttons -->
						<h5 class="font-weight-bold text-uppercase mb-4">Follow Us</h5>

						<div class="justify-content-center row col-lg-10">
							<!-- Facebook -->
							<a href="https://www.facebook.com/tabakov10/" type="button" class="btn btn-lg btn-light btn-pill my-1" target="_blank">
								<i class="fab fa-facebook-square"></i>
							</a>
							<!-- Twitter -->
							<a href="https://www.instagram.com/a10tabakov/" type="button" class="btn btn-lg btn-light btn-pill my-1" target="_blank">
								<i class="fab fa-instagram"></i>
							</a>
							<!-- Google +-->
							<a href="https://www.linkedin.com/in/angel-tabakov-28270823b/" type="button" class="btn btn-lg btn-light btn-pill my-1" target="_blank">
								<i class="fab fa-linkedin"></i>
							</a>
							<!-- Dribbble -->
							<a href="https://github.com/atabakov10" type="button" class="btn btn-lg btn-light btn-pill my-1" target="_blank">
								<i class="fab fa-github"></i>
							</a>
						</div>
					</div>
					<!-- Grid column -->
					<hr class="clearfix w-100 d-md-none">

				</div>
				<!-- Grid row -->

			</div>
			<div class="container">
				<small><i>Muscle Gain</i> - 05.09.2022 - @DateTime.UtcNow.ToString("dd/MM/yyyy")</small>
			</div>
			<div class="container">
				<img src="~/img/credit/paypal2.png" />
				<img src="~/img/credit/mastercard.png" />
				<img src="~/img/credit/cirrus.png" />
				<img src="~/img/credit/visa.png" />
			</div>
		</footer>
	</div>
	<!-- ./wrapper -->
	<!-- REQUIRED SCRIPTS -->
	<!-- jQuery -->
	<script src="~/plugins/jquery/jquery.min.js"></script>
	<!-- Bootstrap 4 -->
	<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
	<!-- AdminLTE App -->
	<script src="~/js/adminlte.min.js"></script>
	<script src="plugins/toastr/toastr.min.js"></script>
	<!--Loading screen-->
	<script src="https://cdn.jsdelivr.net/npm/pace-js@latest/pace.min.js"></script>
	<!--Snowflakes-->
	<script src="https://unpkg.com/magic-snowflakes/dist/snowflakes.min.js"></script>
	<script>
		new Snowflakes();
	</script>

	<partial name="_UserMessages" />	
	@await RenderSectionAsync("Scripts", false)
</body>
</html>