@model IEnumerable<QuoteViewModel>

@{
	ViewData["Title"] = "Quotes";
}

<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">@ViewData["Title"]</h3>
			</div>

			<div class="card-body table-responsive p-0">
				<table class="table table-hover text-nowrap">
					<thead>
						<tr>
							<th>Quote</th>
							<th>Author</th>
							<th>Made by:</th>

						</tr>
					</thead>
					<tbody>
						@foreach (var quote in Model)
						{
							<tr>
								<td>@quote.Text</td>
								<td>@quote.AuthorName</td>
								<td>@quote.PublisherFullName</td>
							</tr>
						}
					</tbody>
				</table>
			</div>

		</div>

	</div>
</div>