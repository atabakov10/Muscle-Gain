@model EditCategoryViewModel

@{
	ViewData["Title"] = "Update category";
}

<a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-outline-dark mb-2">Back</a>

<form asp-area="Admin" asp-controller="Category" asp-action="Update" method="post">
	<div class="form-group">
		<input asp-for="Id" hidden/>
		<label asp-for="Name"></label>
		<input asp-for="Name" />
		<span asp-validation-for="Name" class="small text-danger"></span>
	</div>
	<div class="row">
		<div class="col-3">
			<button type="submit" class="btn btn-block btn-success btn-xs mb-2">Save Changes</button>
		</div>
	</div>
	<div class="row">
		<div class="col-3">
			<a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-block btn-danger btn-xs">Cancel</a>
		</div>
	</div>
</form>

@section Scripts{
	<partial name="_ValidationScriptsPartial.cshtml" />
}
