@model QuoteViewModel

@{
	ViewData["Title"] = "Update";
}

<form asp-area="Admin" asp-controller="Quote" asp-action="Update" method="post">
	<div class="form-group">
		<input asp-for="Id" hidden/>
		<label asp-for="Text"></label>
		<input asp-for="Text" />
		<span asp-validation-for="Text" class="small text-danger"></span>

		<label asp-for="AuthorName"></label>
		<input asp-for="AuthorName" />
		<span asp-validation-for="AuthorName" class="small text-danger"></span>
	</div>
	<div class="row">
		<div class="col-3">
			<button type="submit" class="btn btn-block btn-success btn-xs">Save Changes</button>
		</div>
	</div>
	<div class="row">
		<div class="col-3">
			<a asp-area="Admin" asp-controller="Quote" asp-action="Index" class="btn btn-block btn-danger btn-xs">Cancel</a>
		</div>
	</div>
</form>

@section Scripts{
	<partial name="_ValidationScriptsPartial.cshtml" />
}