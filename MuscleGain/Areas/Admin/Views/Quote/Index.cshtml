@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<QuoteViewModel>

@{
    ViewData["Title"] = "Quotes";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
            </div>

            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
	                        <th>Quote</th>
	                        <th>Author</th>
	                        <th>Published by</th>
	                        <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var quote in Model)
                        {
                            <tr>
	                            <td>@quote.Text</td>
	                            <td>@quote.AuthorName</td>
	                            <td>@quote.PublisherFullName</td>
	                            <td>
                                    <a asp-area="Admin" asp-action="Edit" asp-controller="Quote" asp-route-id="@quote.Id" class="btn btn-block btn-outline-info btn-xs mb-1">Edit</a>
                                    <form asp-area="Admin" asp-action="Delete" asp-controller="Quote" method="post">
                                        <input name="id" type="hidden" value="@quote.Id" />
                                        <button type="submit" class="btn btn-block btn-outline-danger btn-xs">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>
</div>
