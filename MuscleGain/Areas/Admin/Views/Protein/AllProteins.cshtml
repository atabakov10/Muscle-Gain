@model IEnumerable<MuscleGain.Core.Models.Proteins.ProteinListingViewModel>

@{
	ViewData["Title"] = "Proteins Page";
}

<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Proteins</h3>
			</div>

			<div class="card-body table-responsive p-0">
				<table class="table table-hover text-nowrap">
					<thead>
						<tr>
							<th>ID</th>
							<td>Image</td>
							<th>Name</th>
							<th>Flavour</th>
							<th>Grams</th>
							<th>Price</th>
							<th>Category</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var protein in Model)
						{
							<tr>
								<td>@protein.Id</td>
								<td><img class="rounded w-25" src="@protein.ImageUrl"></td>
								<td>@protein.Name</td>
								<td>@protein.Flavour</td>
								<td>@protein.Grams</td>
								<td>@protein.Price $</td>
								<td>@protein.Category</td>
							</tr>

						}

					</tbody>
				</table>
			</div>

		</div>

	</div>
</div>