@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MuscleGain.Core.Models.Proteins.AddProtein

@{
	ViewData["Title"] = "Add Protein";
}

<div class="container">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<h2 class="heading-margin text-center">Add Protein</h2>
		<form method="post" enctype="multipart/form-data">
			<input asp-for="@Model.UserId" hidden>
			<div class="mb-3">
				<label asp-for="Name" class="form-label"></label>
				<input asp-for="Name" class="form-control" placeholder="Whey Protein, Clear Protein, etc...">
				<span asp-validation-for="Name" class="small text-danger"></span>

			</div>
			<div class="mb-3">
				<label asp-for="Flavour" class="form-label"></label>
				<input asp-for="Flavour" class="form-control" placeholder="Chocolate, biscuit, etc...">
				<span asp-validation-for="Flavour" class="small text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Grams" class="form-label"></label>
				<input asp-for="Grams" class="form-control" placeholder="Please put your protein's weight.">
				<span asp-validation-for="Grams" class="small text-danger"></span>
			</div>
			<div class="mb-3">
				<div class="input-group">
					<label asp-for="Price" class="form-label"></label>
					<div class="input-group-prepend">
						<span class="input-group-text">$</span>
						<input asp-for="Price" asp-format="{0:#,###.00}" aria-label="Amount (to the nearest dollar)" class="form-control" placeholder="The price will be in Dollars." />
						<span asp-validation-for="Price" class="small text-danger"></span>
					</div>
				</div>
			</div>
			<div class="mb-3">
				<label asp-for="Description" class="form-label"></label>
				<textarea asp-for="Description" rows="4" class="form-control" placeholder="Please write some words about your product."></textarea>
				<span asp-validation-for="Description" class="small text-danger"></span>
			</div>
			<div class="custom-file mb-3">
				<input type="file" asp-for="ImageUrl" class="form-control" id="inputGroupFile01"
					   aria-describedby="inputGroupFileAddon01">
				<span asp-validation-for="ImageUrl" class="text-danger"></span>
			</div>
			<div class="col md-3">
				<div class="form-group">
					<label asp-for="CategoryId" class="form-label"></label>
					<select asp-for="CategoryId" class="form-select">
						@foreach (var category in Model.Categories)
						{
							<option value="@category.Id">@category.Name</option>
						}
					</select>
					<span asp-validation-for="CategoryId" class="small text-danger"></span>
				</div>
			</div>
			<div class="col-6">
				<button type="submit" class="btn btn-primary mt-2 mb-2">Add</button>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}