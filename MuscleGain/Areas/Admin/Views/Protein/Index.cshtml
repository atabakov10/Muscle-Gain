@model IEnumerable<MuscleGain.Core.Models.Proteins.ProteinListingViewModel>

@{
    ViewData["Title"] = "All unapproved proteins";
}

@if (Model.Count() == 0)
{
    <h1>There are no Unapproved Proteins</h1>
}

<div class="container border-dark">
    <div class="row">
	    <div class="col-md-10">
            <div class="card-group">
                @foreach (var protein in Model)
                {
                    <div class="card-group">
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="@protein.ImageUrl" alt="@protein.Name - @protein.Price">
                            <div class="card-body text-center">
                                <h5 class="card-title">@protein.Name - @protein.Price lv.</h5>
                            </div>
                            <div class="center mb-2">
                                <a asp-controller="Protein" asp-action="Details" asp-route-Id="@protein.Id" class="btn btn-primary">Review Protein</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
